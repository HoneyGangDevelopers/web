<?php
$con = mysqli_connect("localhost","root","","proba");       ---------------------------lekérdezés--------------------------
$sql = "Select id, f_name, l_name from probatabla";

$result=mysqli_query($con,$sql);

while ($row=mysqli_fetch_array($result)) {
$id=$row['id'];
$fnev=$row['f_name'];
$lnev=$row['l_name'];

print('<tr>
		<td>'.$id.'</td>
		<td>'.$fnev.'</td>
		<td>'.$lnev.'</td>
	</tr>');
}
?>

